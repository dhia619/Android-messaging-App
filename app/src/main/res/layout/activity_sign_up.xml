<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/primary_dark">

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp">

        <!--top frame-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Create An Account"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <!-- zone pour importation d'image de profile -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@color/placeholder_text_color"
                android:layout_marginVertical="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select profile image"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/primary_dark"
                    android:fontFamily="@font/poppins"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>

        <!-- form frame -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullnameFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textColorHint="@color/placeholder_text_color"
                app:boxBackgroundColor="@color/input_background"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white"
                app:cursorColor="@color/white"
                app:hintTextColor="@color/primary_green"
                app:startIconDrawable="@drawable/name_ico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullnameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/input_background"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:inputType="text"/>


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/placeholder_text_color"
                app:boxBackgroundColor="@color/input_background"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white"
                app:cursorColor="@color/white"
                app:hintTextColor="@color/primary_green"
                app:startIconDrawable="@drawable/mail_ico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/input_background"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/poppins"/>


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textColorHint="@color/placeholder_text_color"
                app:boxBackgroundColor="@color/input_background"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white"
                app:cursorColor="@color/white"
                app:hintTextColor="@color/primary_green"
                app:startIconDrawable="@drawable/phone_ico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/input_background"
                    android:textColor="@color/white"
                    android:inputType="phone"
                    android:fontFamily="@font/poppins"/>


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/brthFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birthday"
                android:textColorHint="@color/placeholder_text_color"
                app:boxBackgroundColor="@color/input_background"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white"
                app:cursorColor="@color/white"
                app:hintTextColor="@color/primary_green"
                app:startIconDrawable="@drawable/calendar_ico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/brthField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/input_background"
                    android:textColor="@color/white"
                    android:inputType="date"
                    android:fontFamily="@font/poppins"/>


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwdFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/input_background"
                android:hint="@string/password_input"
                android:textColorHint="@color/placeholder_text_color"
                app:boxBackgroundColor="@color/input_background"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/white"
                app:cursorColor="@color/white"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/primary_green"
                app:startIconDrawable="@drawable/lock_ico">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- bottom frame -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/sgupButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary_green"
                android:text="Sign up"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:elevation="15dp"/>
            <!-- alternative color text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="@color/primary_green"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>