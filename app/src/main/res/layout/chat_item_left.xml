<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_dark"
    android:layout_marginBottom="5dp"
    android:padding="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/profile_img_chat_container"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_img_chat"

            android:src="@mipmap/ic_default_avatar_round"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_message"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/profile_img_chat_container"
        android:background="@drawable/input_left_msg_shape"
        android:padding="8dp"
        android:textSize="18sp"
        android:text="@string/app_name"
        />

</RelativeLayout>